@model IEnumerable<GraniteCore2_1.Models.SpecialTag>
@{
    ViewData["Title"] = "Index";
}
<br />
<div class="container row p-0 m-0">
    <br />
    <div class="col-9">
        <h2 class="text-info ">Special tags list</h2>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-info text-light form-control"><i class="fas fa-plus"></i>&nbsp;New special tag</a>
    </div>
    <br />
    <div class="col-12 border p-3 m-3">
        <form method="post">
            @if (Model != null)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary table-info">
                        <th>
                            @Html.DisplayNameFor(n => n.Name)
                        </th>
                        <th>
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(n => item.Name)
                            </td>
                            <td>
                                <partial name="_TableButtonPartial" model="item.Id" />
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <h2 class="text-danger ">No data found</h2>
            }
        </form>
    </div>
</div>
