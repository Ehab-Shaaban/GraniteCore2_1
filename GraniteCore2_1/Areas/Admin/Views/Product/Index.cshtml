@model IEnumerable<GraniteCore2_1.Models.Product>
@{
    ViewData["Title"] = "Index";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Product list</h2>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-info form-control text-light"><i class="fas fa-plus"></i>&nbsp; New product</a>
    </div>
    <div class="col-12 border p-3 m-3">
        <form method="post">
            @if (Model != null)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary table-info">
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.IsAvailable)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.ProductType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.SpecialTag)
                        </th>
                        <th>

                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.Image" style="width:30px; height:30px; border-radius:50px;"/>
                                <span>&nbsp;&nbsp;</span>
                                @Html.DisplayFor(i => item.Name)
                            </td>
                            <td>
                                @string.Format("{0:c}", item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(i => item.IsAvailable)
                            </td>
                            <td>
                                @Html.DisplayFor(i => item.ProductType.Name)
                            </td>
                            <td>
                                @if (item.SpecialTag.Name != "--None--")
                                {
                                    @Html.DisplayFor(i => item.SpecialTag.Name)
                                }
                                else
                                {
                                }

                            </td>

                            <partial name="_TableButtonPartial" model="item.Id" />
                        </tr>
                    }
                </table>
            }
            else
            {
                <h3 class="text-danger">No Data found</h3>
            }
        </form>
    </div>

</div>

