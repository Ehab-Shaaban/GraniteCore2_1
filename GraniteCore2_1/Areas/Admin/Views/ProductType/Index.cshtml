@model IEnumerable<GraniteCore2_1.Models.ProductType>
@{
    ViewData["Title"] = "Index";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Product Types list</h2>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-info form-control text-light"><i class="fas fa-plus"></i> New product Type</a>
    </div>
    <div class="col-12 border p-3 m-3">
        <form method="post">
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary table-info">
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>

                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(i => item.Name)
                            </td>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </tr>
                    }
                </table>
            }
            else
            {
                <h3 class="text-danger">No Data found</h3>
            }
        </form>
    </div>

</div>